<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="at.ac.tuwien.ldsc.group1.*"/>

    <bean class="at.ac.tuwien.ldsc.group1.application.CsvParser" id="csvParser">
        <constructor-arg name="fileName" value="TestScenario1.csv"/>
    </bean>

    <bean class="at.ac.tuwien.ldsc.group1.application.CsvWriter" id="scenarioWriter">
        <constructor-arg name="filename" value="testOutput.csv"/>
        <constructor-arg name="type" value="SCENARIO"/>
    </bean>

    <bean class="at.ac.tuwien.ldsc.group1.application.CsvWriter" id="overviewWriter">
        <constructor-arg name="filename" value="testOutput.csv"/>
        <constructor-arg name="type" value="OVERVIEW"/>
    </bean>

    <!-- This bean requires a writer bean with the name "scenarioWriter" as defined above-->
    <bean class="at.ac.tuwien.ldsc.group1.application.Scheduler1" id="scheduler1"/>
</beans>